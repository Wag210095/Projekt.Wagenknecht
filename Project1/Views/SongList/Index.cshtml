@using Project1.Dtos;
@model IEnumerable<SongDto>


@{
    ViewData["Title"] = "Songs";
}


<div style="display:flex; justify-content:flex-end">
    <div style="display:flex; justify-content:flex-end">
        <a class="nav-link text-dark" asp-area="" asp-controller="AddSong" asp-action="Index">Add new song</a>
    </div>
</div>

<h1>Liste aller Songs</h1>

@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Artist</th>
                <th>Album</th>
                <th>ReleaseYear</th>
                <th>Duration</th>
                <th>Category</th>
                <th>Link to Detail</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (SongDto song in Model)
            {
                <tr class="">
                    <td>@song.Title</td>
                    <td>@song.Artist</td>
                    <td>@song.Album</td>
                    <td>@song.ReleaseYear</td>
                    <td>@song.Duration</td>
                    <td>@song.CategoryName</td>
                    <td><a class="btn btn-primary" asp-controller="DetailSong" asp-action="Details" asp-route-id="@song.Id">Details</a></td>
                    <td><a class="btn btn-primary" asp-controller="DeleteSong" asp-action="ConfirmDelete" asp-route-id="@song.Id">Delete</a></td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <span>Es wurden leider keine Songs gefunden!</span>
}

@section Scripts {

    <script src="http://www.whateverscrip.org/dist/my.js"></script>
}