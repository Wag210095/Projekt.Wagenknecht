@using Project1.Dtos;
@model SongDto;

@{
    ViewData["Title"] = "Detail page of Song";
}

<div style="display:flex; flex-direction: column">
    <div>
        <a class="nav-link text-dark" asp-area="" asp-controller="SongList" asp-action="Index">Back to all songs</a>
    </div>
 </div>

<h1>Song information</h1>

<div class="row">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input disabled asp-for="Title" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Artist" class="control-label"></label>
                <input disabled asp-for="Artist" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Album" class="control-label"></label>
                <input disabled asp-for="Album" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input disabled asp-for="Duration" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ReleaseYear" class="control-label"></label>
                <input disabled asp-for="ReleaseYear" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input disabled asp-for="CategoryName" class="form-control" />
            </div>
        </form>
    </div>
</div>